<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android_pps"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="13" />
        <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"> </uses-permission>
    	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"> </uses-permission>   			  
  
    <application
        android:allowBackup="true"
        android:icon="@drawable/intercomfabrizio"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.example.android_pps.SplashScreenActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       <activity
            android:name="com.example.android_pps.MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="landscape" />
       <activity android:name="Configuraciones"
           		 android:label="Configuraciones" >
           		 <intent-filter >
           		     <action android:name="com.example.android_pps.Configuraciones" />
           		     <category android:name="android.intent.category.DEFAULT" />
           		 </intent-filter>
       </activity>
    </application>
    

</manifest>
