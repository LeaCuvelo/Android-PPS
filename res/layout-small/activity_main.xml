<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/bttnPrA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:height="70dp"
        android:maxHeight="70dp"
        android:maxWidth="90dp"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:width="90dp"
         />

    <Button
        android:id="@+id/bttnPrO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="1dp"
        android:height="70dp"
        android:maxHeight="70dp"
        android:maxWidth="90dp"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:width="90dp" />

    <Button
        android:id="@+id/bttnPrT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bttnPrF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="1dp"
        android:height="70dp"
        android:maxHeight="70dp"
        android:maxWidth="90dp"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:width="90dp" />

    <Button
        android:id="@+id/bttnPrSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:height="5dp"
        android:maxHeight="5dp"
        android:maxWidth="170dp"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:text="BARRA ESPACIADORA"
        android:textSize="10sp"
        android:width="170dp" />

    <Button
        android:id="@+id/bttnPrPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bttnPrA"
        android:layout_alignParentLeft="false"
        android:layout_alignTop="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_marginTop="104dp"
        android:height="22dp"
        android:maxHeight="22dp"
        android:maxWidth="50dp"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:text="."
        android:textSize="5sp"
        android:width="50dp" />

    <Button
        android:id="@+id/bttnPrDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bttnPrPoint"
        android:layout_alignRight="@+id/bttnPrF"
        android:layout_alignTop="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_marginTop="104dp"
        android:height="22dp"
        android:maxHeight="22dp"
        android:maxWidth="50dp"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:text="Borrar"
        android:textSize="5sp"
        android:width="50dp" />

    <Button
        android:id="@+id/bttnPrNO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bttnPrSI"
        android:layout_alignBottom="@+id/bttnPrSI"
        android:layout_alignRight="@+id/bttnPrSpace"
        android:height="1dp"
        android:maxHeight="1dp"
        android:maxWidth="55dp"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:text="NO"
        android:textSize="5sp"
        android:width="55dp" />

    <Button
        android:id="@+id/bttnPrF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/bttnPrA"
        android:layout_marginRight="1dp"
        android:height="70dp"
        android:maxHeight="70dp"
        android:maxWidth="90dp"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:width="90dp" />

    <Button
        android:id="@+id/bttnPrSI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bttnPrSpace"
        android:layout_alignTop="@+id/bttnPrO"
        android:height="2dp"
        android:maxHeight="2dp"
        android:maxWidth="55dp"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:text="SI"
        android:textSize="5sp"
        android:width="55dp" />

  

    <Button
        android:id="@+id/bttnPrK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:height="70dp"
        android:maxHeight="70dp"
        android:maxWidth="90dp"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:width="90dp" />
    
        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bttnPrO"
            android:layout_alignLeft="@+id/bttnPrSI"
            android:layout_alignRight="@+id/bttnPrNO"
            android:layout_below="@+id/bttnPrNO"
            android:ems="10" >

        <requestFocus />
    </EditText>



</RelativeLayout>
